import pygame 
pygame.init()

WIDTH, HEIGHT = 600, 800

screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Project")
screen.fill("red")


start = True
while start:

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            start = False 


    pygame.display.flip()
pygame.quit()
