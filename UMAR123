class GameObject():
    def __init__(self, filename, x=0, y=0, width=10,height=10):
        self.image_right = pygame.image.load(filename)
        self.image_right = pygame.transform.scale(self.image_right, (width, height))
        self.image_left = pygame.transform.flip(self.image_right, True, False)
        self.image = self.image_right
        self.rect = self.image.get_rect()
        self.rect.x = x
        self.rect.y = y
        self.facing_right = True

    def draw(self):
        screen.blit(self.image, self.rect)

    def move(self,dx, dy):
        self.rect.x += dx
        self.rect.y += dy
        if dx > 0:
            self.image = self.image_right
            self.facing_right = True
        if dx < 0:
            self.image = self.image_left
            self.facing_right = False


# Налаштування гравця

player_x = 0
player_y = 330
player_forward_x = 0
player_forward_y = 0


player = GameObject("player.png", player_x, player_y, 300, 230)

start = True

while start:
    screen.blit(background, (0,0))
    player.draw()

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            start = False

        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_RIGHT:
                player_forward_x = 5
            elif event.key == pygame.K_LEFT:
                player_forward_x = -5
            elif event.key == pygame.K_UP:
                player_forward_y = -5
            elif event.key == pygame.K_DOWN:
                player_forward_y = 5


        elif event.type == pygame.KEYUP:
            if event.key in (pygame.K_RIGHT, pygame.K_LEFT):
                player_forward_x = 0
            if event.key in (pygame.K_UP, pygame.K_DOWN):
                player_forward_y = 0

    

    player.move(player_forward_x, player_forward_y)
    clock.tick(60) #60 кадрів/сек
    pygame.display.flip()
pygame.quit()
