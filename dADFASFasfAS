local button = script.Parent -- Ссылка на кнопку, в которой находится этот скрипт
local player = game.Players.LocalPlayer -- Получаем локального игрока
local character = player.Character or player.CharacterAdded:Wait() -- Ждем, пока загрузится персонаж игрока
local humanoid = character:WaitForChild("Humanoid") -- Ждем Humanoid в персонаже

local defaultSpeed = humanoid.WalkSpeed -- Сохраняем стандартную скорость ходьбы
local boostSpeed = defaultSpeed * 3 -- Новая скорость: в 6 раз больше стандартной
local boostDuration = 6 -- Длительность ускорения в секундах
local isBoosted = false -- Флаг, чтобы избежать повторного срабатывания, пока активен буст

local fireEffect = Instance.new("Fire") -- Создаем стандартный эффект огня Roblox
fireEffect.Size = 50 -- Размер огня (можете настроить по вкусу)
fireEffect.Heat = 50 -- Интенсивность тепла огня
fireEffect.Color = Color3.fromRGB(255, 100, 0) -- Цвет огня (оранжевый)

-- Прикрепляем эффект огня к HumanoidRootPart персонажа,
-- чтобы огонь тянулся за центром персонажа
fireEffect.Parent = character:WaitForChild("HumanoidRootPart")
fireEffect.Enabled = false -- Изначально огонь выключен

local function boostSpeedFunction()
    if isBoosted then return end -- Если ускорение уже активно, выходим
    isBoosted = true -- Устанавливаем флаг, что ускорение активно

    humanoid.WalkSpeed = boostSpeed -- Увеличиваем скорость ходьбы
    fireEffect.Enabled = true -- Включаем эффект огня
    button.Visible = false -- Прячем кнопку на время действия буста

    task.wait(boostDuration) -- Ждем указанное время

    humanoid.WalkSpeed = defaultSpeed -- Возвращаем стандартную скорость
    fireEffect.Enabled = false -- Выключаем эффект огня
    isBoosted = false -- Сбрасываем флаг
    button.Visible = true -- Показываем кнопку снова
end

-- Подключаем функцию к событию нажатия кнопки
button.MouseButton1Click:Connect(boostSpeedFunction)
